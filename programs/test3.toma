void pattern heartAngle(){
    loop 10 times{
        spray on
        engine on
        sleep 3
        engine off
        sleep 10
        spray off
        wheel left
        sleep 180
        wheel off
        engine on
        sleep 3
        engine off
        engine on
        sleep 3
        engine off
        sleep 2
        spray off
        wheel left
        sleep 180
        wheel off
        engine on
        sleep 3
        engine off
        wheel left
        sleep 20
        wheel off
    }
}

void pattern heartLine(){
    spray on
    engine on
    sleep 4
    engine off
    sleep 40
    spray off
    wheel left
    sleep 180
    wheel off
    engine on
    sleep 4
    engine off
    engine on
    sleep 4
    engine off
    wheel left
    sleep 180
    wheel off
    engine on
    sleep 4
    engine off
}

